tpPosLabel.Size = UDim2.new(buttonWidthScale, 0, buttonHeightScale / 2, 0)
tpPosLabel.AnchorPoint = Vector2.new(0, 0)
tpPosLabel.TextXAlignment = Enum.TextXAlignment.Left

